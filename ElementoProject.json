            },
            {
              "id": "calculation_12",
              "name": "Is Round Complete",
              "properties": {
                "calculation": {
                  "expr": "Or(IsRunComplete, RoundSkipped)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_14",
              "name": "Is Run Complete",
              "properties": {
                "calculation": {
                  "expr": "Len(CurrentTileRun) === Len(MazeSequence)"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_9",
              "name": "Game Running",
              "properties": {
                "calculation": {
                  "expr": "Or(Status == 'Playing', Status == 'Paused')"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "function_24",
              "name": "Are Sequential",
              "properties": {
                "input1": "tileNo",
                "input2": "nextTile",
                "calculation": {
                  "expr": "let exit = ExitSide(tileNo)\nlet entry = EntrySide(nextTile)\nlet sides = [exit, entry]\nOr(\n  HasSameItems(sides, ['left', 'right']),\n  HasSameItems(sides, ['right', 'left']),\n  HasSameItems(sides, ['top', 'bottom']),\n  HasSameItems(sides, ['bottom', 'top'])\n)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_22",
              "name": "Next Tile",
              "properties": {
                "input1": "tileNo",
                "calculation": {
                  "expr": "let exitSide = ExitSide(tileNo)\nlet tilePosition = FindIndex(Tiles, tileNo)\nlet nextTile = AdjacentTile(tilePosition, exitSide)\nIf(NotNull(nextTile), If(AreSequential(tileNo, nextTile), nextTile, null), null)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_5",
              "name": "Points",
              "properties": {
                "input1": "word",
                "calculation": {
                  "expr": "let run = Len(CurrentTileRun)\nlet bonus = If(IsRunComplete, 30, 0)\nIf(run < 4, 0, run * 10 + bonus)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_6",
              "name": "Start New Game",
              "properties": {
                "calculation": {
                  "expr": "Reset(Score)\nReset(GameTimer)\nSet(Status, 'Playing')\nStartNewRound()\nGameTimer.Start()"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_7",
              "name": "Start New Round",
              "properties": {
                "calculation": {
                  "expr": "Reset(RoundSkipped)\nSet(MazeSequence, Maze([Random(TileCount - 1)]))\nSet(Tiles, Shuffle(Range(0, TileCount - 1)))\n//Set(Tiles, Range(0, TileCount - 1))"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_14",
              "name": "Adjacent",
              "properties": {
                "input1": "index",
                "calculation": {
                  "expr": "let top = If(index >= Cols, index - Cols, null)\nlet bottom = If(index < TileCount - Cols, index + Cols, null)\nlet left = If(index % Cols > 0, index - 1, null)\nlet right = If(index % Cols < Cols - 1, index + 1, null)\nSelect([top, right, bottom, left], Not(IsNull($item)))"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_23",
              "name": "Adjacent Tile",
              "properties": {
                "input1": "tilePosition",
                "calculation": {
                  "expr": "let tilePos = AdjacentPosition(tilePosition, side)\nItemAt(Tiles, tilePos)"
                },
                "input2": "side"
              },
              "kind": "Function"
            },
            {
              "id": "function_25",
              "name": "Adjacent Position",
              "properties": {
                "input1": "tilePos",
                "calculation": {
                  "expr": "FirstNotNull(\nIf(side == 'top', If(tilePos >= Cols, tilePos - Cols, null)),\nIf(side == 'bottom', If(tilePos < TileCount - Cols, tilePos + Cols, null)),\nIf(side == 'left', If(tilePos % Cols > 0, tilePos - 1, null)),\nIf(side == 'right', If(tilePos % Cols < Cols - 1, tilePos + 1, null))\n)\n"
                },
                "input2": "side"
              },
              "kind": "Function"
            },
            {
              "id": "function_26",
              "name": "Tile Run",
              "properties": {
                "input1": "tileNo",
                "calculation": {
                  "expr": "let nextInRun = NextTile(tileNo)\nIf(NotNull(nextInRun), FlatList(tileNo, TileRun(nextInRun)), List(tileNo))"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_13",
              "name": "Maze",
              "properties": {
                "input1": "visited",
                "calculation": {
                  "expr": "if (Len(visited) == MaxLength) return visited\nlet latest = Last(visited)\nlet possibles = Shuffle(WithoutItems(Adjacent(latest), visited))\nfor(const p of possibles) {\n  let result = Maze(FlatList(visited, p))\n  if (result) return result\n}\nif (Len(visited) >= MinLength) return visited\nreturn null"
                },
                "javascript": true
              },
              "kind": "Function"
            },
            {
              "id": "function_16",
              "name": "Entry Side",
              "properties": {
                "input1": "tileNo",
                "calculation": {
                  "expr": "let mazePosition = FindIndex(MazeSequence, tileNo)\nlet prevTile = If(Not(IsNull(mazePosition)), ItemAt(MazeSequence, mazePosition - 1))\nFirstNotNull(\n  If (prevTile == tileNo - Cols, 'top'),\n  If (prevTile == tileNo + 1, 'right'),\n  If (prevTile == tileNo + Cols, 'bottom'),\n  If (prevTile == tileNo - 1, 'left')\n)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_17",
              "name": "Exit Side",
              "properties": {
                "input1": "tileNo",
                "calculation": {
                  "expr": "let mazePosition = FindIndex(MazeSequence, tileNo)\nlet nextTile = If(Not(IsNull(mazePosition)), ItemAt(MazeSequence, mazePosition + 1))\nFirstNotNull(\n  If (nextTile == tileNo - Cols, 'top'),\n  If (nextTile == tileNo + 1, 'right'),\n  If (nextTile == tileNo + Cols, 'bottom'),\n  If (nextTile == tileNo - 1, 'left')\n)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_8",
              "name": "End Round",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Score, Score + Points())"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_9",
              "name": "End Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Ended')\nEndRound()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_10",
              "name": "Pause Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Paused')\nGameTimer.Stop()"
