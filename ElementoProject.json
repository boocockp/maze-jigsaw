            {
              "id": "function_21",
              "name": "Is Middle",
              "properties": {
                "input1": "tileNo",
                "calculation": {
                  "expr": "And(ListContains(MazeSequence, tileNo), Not(IsStart(tileNo)), Not(IsEnd(tileNo)))"
                }
              },
              "kind": "Function"
            },
