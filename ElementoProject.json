              },
              "kind": "Function"
            },
            {
              "id": "function_11",
              "name": "Continue Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Playing')\nGameTimer.Start()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_18",
              "name": "Swap Tiles",
              "properties": {
                "input1": "index1",
                "input2": "index2",
                "action": true,
                "calculation": {
                  "expr": "let piece1 = ItemAt(Tiles, index1)\nlet piece2 = ItemAt(Tiles, index2)\nUpdate(Tiles, {[index1]: piece2, [index2]: piece1})"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_19",
              "name": "Is Start",
              "properties": {
                "input1": "tileNo",
                "calculation": {
                  "expr": "tileNo == First(MazeSequence)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_20",
              "name": "Is End",
              "properties": {
                "input1": "tileNo",
                "calculation": {
